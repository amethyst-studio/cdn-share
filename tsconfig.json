{
  "compilerOptions": {
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "alwaysStrict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./**/*.ts",
    "./**/**.ts",
    "./**/*.js",
    "./**/**.js"
  ]
}
