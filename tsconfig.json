{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "alwaysStrict": true,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "./*.ts",
    "./**/*.ts",
    "./.eslintrc.js",
  ]
}
