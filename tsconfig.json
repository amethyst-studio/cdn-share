{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ESNext"
    ],
    "types": [
      "node",
      "chai",
      "mocha"
    ],
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "esModuleInterop": true
  },
  "include": [
    "./index.ts",
    "./lib/**/*.ts",
    "./.eslintrc.js",
    "./ecosystem.config.js"
  ]
}
